{
	"manifest_version": 2,

	"name":"Musec Player",
	"short_name":"Musec",
	"description":"Control musec quickly and easily",
	"current_locale":"en",
	"minimum_chrome_version":"49",
	"version":"0.1",
	
	"externally_connectable": {
		"matches": ["*://*.absolutedouble.co.uk/*"]
	},
	"commands": {
		"toggle-music": {
			"suggested_key": {
				"default":"Ctrl+Shift+Q",
				"mac":"Command+Shift+Q"
			},
			"description": "Pause/Play"
		}
	},
	"icons": {
		"32": "logo_32.jpg",
		"256": "logo_256.png"
	},
	"browser_action": {
		"default_icon":"logo_256.png",
		"default_popup":"mini.html"
	},
	"permissions": [
		"tabs",
		"storage",
		"unlimitedStorage",
		"*://*/*"
	]
}